#!/bin/bash

case $1 in
up)
  pamixer -i 5
  ;;
down)
  pamixer -d 5
  ;;
mute)
  pamixer -t
  ;;
esac

# ObtÃ©n volumen y estado
VOLUME=$(pamixer --get-volume)
MUTED=$(pamixer --get-mute)

# Elige el Ã­cono segÃºn estado
if [ "$MUTED" = "true" ]; then
  ICON="ðŸ”‡"
else
  ICON="ðŸ”Š"
fi

# Muestra notificaciÃ³n con dunst
notify-send "Volumen $ICON" "${VOLUME}%"
